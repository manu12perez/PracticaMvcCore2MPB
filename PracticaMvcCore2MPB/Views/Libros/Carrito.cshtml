@model List<PracticaMvcCore2MPB.Models.Libro>

<h1>Carrito Libros</h1>

@if (Model.Count == 0)
{
    <p>No hay libros añadidos.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Título</th>
                <th>Autor</th>
                <th>Portada</th>
                <th>Cantidad</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var libro in Model)
            {
                <tr>
                    <td>@libro.Titulo</td>
                    <td>@libro.Autor</td>
                    <td><img src="@libro.Portada" style="height:200px;width:150px" /></td>
                    <td>@ViewBag.CantidadPorLibro[libro.IdLibro]</td>
                    <td>
                        <a asp-action="EliminarLibro" asp-route-idlibro="@libro.IdLibro" class="btn btn-danger">
                            Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-action="ConfirmarReclutados" method="post">
        <button type="submit" class="btn btn-success">Confirmar Reclutamiento</button>
    </form>
}